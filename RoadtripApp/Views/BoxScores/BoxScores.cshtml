<h1>Box Scores9</h1>

@model IEnumerable<BoxScores>


    <div class="container">
        <div class="row ">

            @foreach (var bs in Model)
            {
                    <div class="col-md-4">
                        <div class="row-auto">
                            <div class="card-deck">
                                <div class="card padding 10px">
                                    <div class="card-body">
                                        <h2 class="card-title">"@bs.AwayTeam at @bs.HomeTeam"</h2>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">@bs.AwayTeam Runs:@bs.AwayTeamRuns Hits:@bs.AwayTeamHits Errors:@bs.AwayTeamErrors</li>
                                            <li class="list-group-item">@bs.HomeTeam Runs:@bs.HomeTeamRuns Hits:@bs.HomeTeamHits Errors:@bs.HomeTeamErrors</li>
                                            <li class="list-group-item"></li>


                                        </ul>


                                    </div>


                                </div>


                            </div>


                        </div>


                    </div>
            }
        </div>
    </div>
