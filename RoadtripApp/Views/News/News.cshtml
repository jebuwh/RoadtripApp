
<h1>MLB News9</h1>

@model IEnumerable<News>

<div class="container">
    <div class="row ">

        @foreach (var news in Model)
        {
        <div class="col-md-4">
            <div class="row-auto">
                <div class="card-deck">
                    <div class="card padding 10px">
                        <div class="card-body">
                            <h2 class="card-title">"@news.Title"</h2>
                            <h6 class="card-subtitle mb-2 text-muted">updated: @news.TimeAgo</h6>
                            <p class="card-text">@news.Content</p>
                            <a href="@news.NewsURL" class="card-link">RotoBaller Source</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div> 
